<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_record_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/wrap_ic_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_category"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_rc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Food"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/wrap_ic_category"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_dot_from"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_rc_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/wrap_ic_category"/>

    <TextView
        android:id="@+id/tv_from_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Vegetable"
        android:textColor="@color/textLight"
        app:layout_constraintBottom_toBottomOf="@id/ic_dot_from"
        app:layout_constraintTop_toTopOf="@id/ic_dot_from"
        app:layout_constraintStart_toEndOf="@id/ic_dot_from" />

    <ImageView
        android:id="@+id/ic_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/tv_rc_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_from_acc" />

    <ImageView
        android:id="@+id/ic_dot_to"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintTop_toBottomOf="@id/tv_rc_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_arraw"
        app:tint="#475A68" />

    <TextView
        android:id="@+id/tv_to_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Vegetable"
        android:textColor="@color/textLight"
        app:layout_constraintBottom_toBottomOf="@id/ic_dot_to"
        app:layout_constraintTop_toTopOf="@id/ic_dot_to"
        app:layout_constraintStart_toEndOf="@id/ic_dot_to" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42,000"
        android:textColor="@color/expense"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>